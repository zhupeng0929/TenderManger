@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- #section:basics/content.breadcrumbs -->
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="#">投标客户信息</a>
        </li>
        <li class="active">列表</li>
    </ul><!-- /.breadcrumb -->
</div>

<div class="page-content">
    <div class="row">
        <div class="col-md-12">
            <div class="widget-box widget-color-blue">
                <div class="widget-header">
                    @Html.Action("MenuHeader", "Home", new { area = "" })
                </div>
                <div class="widget-body gridwidth">
                    <div class="widget-main">
                        <div class="row">
                            <div class="col-md-12 ">
                                <table id="maingrid"></table>
                                <div id="grid-pager"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div><!-- /.page-content -->
<div id="editDlg" style="display: none;margin-top:10px;">
    <div class="col-xs-12">
        <form class="form-horizontal" method="post" action="/TenderUserManager/Add" enctype="multipart/form-data" id="editForm">

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for=""> 名称 </label>
                <div class="col-sm-9">
                    <input type="text" id="Name" v-model="Name" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for=""> 单位抬头 </label>
                <div class="col-sm-9">
                    <input type="text" id="Company" v-model="Company" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for=""> 联系人 </label>
                <div class="col-sm-9">
                    <input type="text" id="ContactPerson" v-model="ContactPerson" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for=""> 联系方式 </label>
                <div class="col-sm-9">
                    <input type="text" id="ContactNum" v-model="ContactNum" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for=""> 保证金 </label>
                <div class="col-sm-9">
                    <input type="text" id="CashDeposit" v-model="CashDeposit" />
                </div>
            </div>


            <div v-show="isSelect" class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for=""> 关联账户</label>
                <div class="col-sm-9">
                    <input id="Account" type="text" v-model="Account" />
                    <input id="Id" type="hidden" v-model="Id" />
                    <div id="menuContent" class="menuContent" style="display: none;z-index: 99;">
                        <ul id="org" class="ztree"></ul>
                    </div>
                </div>
            </div>

            <div style="margin-left:-12px;margin-right:-12px;">
                <label class="col-sm-3 control-label no-padding-right" for=""> 营业执照 </label>
                <div class="col-sm-7">
                    <input type="file" name="Filedata" id="Filedata" />
                </div>
            </div>
          
        </form>
    </div>
</div>
<script src="~/Content/scripts/zTree/js/jquery.ztree.excheck.js"></script>
<script src="~/BllScripts/grid.js"></script>
<script src="~/BllScripts/parentTree.js"></script>
<script src="~/BllScripts/jqEvent.js"></script>

<script src="~/BllScripts/tenderUser.js"></script>

