page {background: #efefef;}
.content {}
.item {height: 50px;display: flex;padding: 0 10px;background: #fff;}
.input {display: block;flex: 1;line-height: 50px;font-size: 14px;height: 50px;}
.sendcode {width: 80px;font-size: 12px;height: 30px;margin-top: 10px;background: pink;line-height: 30px;text-align: center;border-radius: 2px;color: #fff;}

.tip {padding-top: 10px;font-size: 12px;line-height: 16px;color: #999;text-align: right;}

.submit {height: 40px;line-height: 40px;text-align: center;border-radius: 2px;margin: 30px 30px;background: #FFA07A;font-size: 16px;color: #fff;letter-spacing: 2px;}

.info {margin-bottom:-5px;}
.line {flex: 1;height: 15px;vertical-align: top;}
.txt {width: 100px;font-size: 12px;color: #777;text-align: center;}
.info .borderBtm::before {background: #aaa;}

.register {margin: 40rpx 0 0;height: 40px;line-height: 40px;text-align: center;border-radius: 2px;background: #fff;font-size: 16px;color: #333;letter-spacing: 2px;}