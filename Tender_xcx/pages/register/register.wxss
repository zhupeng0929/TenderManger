page {background: #efefef;}
.content {padding: 15px;}
.item {height: 50px;display: flex;padding: 0 10px;background: #fff;}
.input {display: block;flex: 1;line-height: 50px;font-size: 14px;height: 50px;}
.code {width: 80px;font-size: 12px;height: 30px;margin-top: 10px;line-height: 30px;text-align: center;border-left: 1px solid #aaa;}
.sendcode {width: 80px;font-size: 12px;height: 30px;margin-top: 10px;background: #FFA07A;line-height: 30px;text-align: center;border-radius: 2px;color: #fff;}

.tip {padding-top: 10px;font-size: 12px;line-height: 16px;color: #999;}

.submit {height: 40px;line-height: 40px;text-align: center;border-radius: 2px;margin: 15px 0;background: #FFA07A;font-size: 16px;color: #fff;letter-spacing: 2px;}