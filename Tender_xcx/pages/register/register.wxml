<view class='content'>
  <form bindsubmit="doRegister">
    <!-- <view class='item borderBtm'>
      <input class='input' placeholder="验证码" bindinput="getVarifyCode" name="varifycode" auto-focus/>
      <view class='code'>ASDF</view>
    </view> -->
    <view class='item _border_bottom_1px'>
      <input class='input' type="number" bindinput="getPhone" placeholder="手机号" maxlength="11" name="phone" auto-focus/>
      <view class='sendcode' style='background: {{isSend ? "#ccc" : ""}}' catchtap='sendCode'>{{isSend ? second + ' S' : "发送验证码"}}</view>
    </view>
    <view class='item _border_bottom_1px'>
      <input class='input' type="number" maxlength="6" name="msgcode" placeholder="短信验证码" />
    </view>
    <view class='item'>
      <input class='input' name="password" password placeholder="密码" />
    </view>

    <view class='tip'>提示：每个手机号每天最多可获取4条短信。</view>

    <button class='submit' form-type='submit'>注册</button>

  </form>
</view>


<view id="tip" wx:if="{{dialogTip}}">
  <text>{{tipText}}</text>
</view>