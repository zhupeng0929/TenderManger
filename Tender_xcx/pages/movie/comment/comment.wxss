@keyframes shodow
{from {opacity: 0;}to {opacity: 1;}}

#_tool {position: fixed;left: 0;bottom: 0;width: 100%;background: #fff;z-index: 998;animation: tool .1s ease-in-out;}
@keyframes tool{from {height: 100px;}to {height: aoto;}}

._item {height: 55px;line-height: 55px;font-size: 14px;padding: 0 15px;color: #666;}
