.review {padding: 25rpx;margin-bottom: 16rpx;background: #fff;box-shadow: 0 1px 2px #ccc;}

.r-header {display: flex;height: 26px;line-height: 26px;}
.r-title {font-size: 16px;font-weight: bold;margin-right: 10px;color: #333;flex: 1;width: 0;}
._stars_null {font-size: 12px;color: #aaa;}


.r-brief {margin: 15rpx 0 20rpx;} 
.r-brief text {font-size: 14px;line-height: 22px;color: #555;display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 3;overflow: hidden;}
.r-tool {height: 20px;line-height: 20px;font-size: 12px;color: #888;}
.r-tool .r-date {font-size: 12px;float: right;}
